<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <Button
        android:id="@+id/register_btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Register"
        app:layout_constraintEnd_toEndOf="@+id/register_txt_pw_confirm"
        app:layout_constraintStart_toStartOf="@+id/register_txt_pw_confirm"
        app:layout_constraintTop_toBottomOf="@+id/register_txt_pw_confirm" />

    <EditText
        android:id="@+id/register_txt_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/register_txt_username"
        app:layout_constraintStart_toStartOf="@+id/register_txt_username"
        app:layout_constraintTop_toBottomOf="@+id/register_txt_username" />

    <EditText
        android:id="@+id/register_txt_pw_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/register_txt_pw"
        app:layout_constraintStart_toStartOf="@+id/register_txt_pw"
        app:layout_constraintTop_toBottomOf="@+id/register_txt_pw" />

    <EditText
        android:id="@+id/register_txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/register_txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/register_txt_email"
        app:layout_constraintStart_toStartOf="@+id/register_txt_email"
        app:layout_constraintTop_toBottomOf="@+id/register_txt_email" />
</androidx.constraintlayout.widget.ConstraintLayout>