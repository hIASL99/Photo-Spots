<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        tools:context=".ViewPicture">

        <TextView
            android:id="@+id/viewloc_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/viewloc_textview_label_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="by"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintBottom_toBottomOf="@+id/viewloc_text_title"
            app:layout_constraintEnd_toStartOf="@+id/viewloc_textview_postuser"
            app:layout_constraintTop_toTopOf="@+id/viewloc_text_title" />

        <TextView
            android:id="@+id/viewloc_textview_postuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintBottom_toBottomOf="@+id/viewloc_textview_label_by"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/viewloc_textview_label_by" />

        <ImageView
            android:id="@+id/viewloc_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_max="300dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewloc_text_title"
            app:layout_constraintWidth_max="300dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/viewloc_textview_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="@+id/viewloc_imageview"
            app:layout_constraintStart_toStartOf="@+id/viewloc_imageview"
            app:layout_constraintTop_toBottomOf="@+id/viewloc_imageview" />

        <TextView
            android:id="@+id/viewloc_textview_postrating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="100"
            app:layout_constraintBottom_toBottomOf="@+id/viewloc_button_dislike"
            app:layout_constraintEnd_toStartOf="@+id/viewloc_button_like"
            app:layout_constraintTop_toTopOf="@+id/viewloc_button_dislike" />

        <Button
            android:id="@+id/viewloc_button_like"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@android:drawable/arrow_up_float"
            app:layout_constraintBottom_toBottomOf="@+id/viewloc_textview_postrating"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/viewloc_button_dislike"
            app:layout_constraintTop_toTopOf="@+id/viewloc_textview_postrating" />

        <Button
            android:id="@+id/viewloc_button_dislike"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@android:drawable/arrow_down_float"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewloc_textview_address" />

        <TextView
            android:id="@+id/viewloc_textview_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Rating"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewloc_button_dislike" />

        <RatingBar
            android:id="@+id/viewloc_ratingbar_rating"
            style="@android:style/Widget.DeviceDefault.Light.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="64dp"
            app:layout_constraintBottom_toBottomOf="@+id/viewloc_textview_username"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/viewloc_textview_username"
            app:layout_constraintTop_toTopOf="@+id/viewloc_textview_username" />

        <TextView
            android:id="@+id/viewloc_textview_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Comment"
            app:layout_constraintEnd_toEndOf="@+id/viewloc_textview_label_categories"
            app:layout_constraintStart_toStartOf="@+id/viewloc_textview_label_categories"
            app:layout_constraintTop_toBottomOf="@+id/viewloc_textview_label_categories" />

        <TextView
            android:id="@+id/viewloc_textview_label_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Categories"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewloc_textview_username" />

        <TextView
            android:id="@+id/viewloc_textview_cat1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="cat1"
            app:layout_constraintBottom_toBottomOf="@+id/viewloc_textview_label_categories"
            app:layout_constraintStart_toEndOf="@+id/viewloc_textview_label_categories"
            app:layout_constraintTop_toTopOf="@+id/viewloc_textview_label_categories" />

        <TextView
            android:id="@+id/viewloc_textview_cat2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="cat2"
            app:layout_constraintBottom_toBottomOf="@+id/viewloc_textview_cat1"
            app:layout_constraintStart_toEndOf="@+id/viewloc_textview_cat1"
            app:layout_constraintTop_toTopOf="@+id/viewloc_textview_cat1" />

        <TextView
            android:id="@+id/viewloc_textview_morecat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="more"
            app:layout_constraintBottom_toBottomOf="@+id/viewloc_textview_cat2"
            app:layout_constraintStart_toEndOf="@+id/viewloc_textview_cat2"
            app:layout_constraintTop_toTopOf="@+id/viewloc_textview_cat2" />

        <EditText
            android:id="@+id/viewloc_edittext_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="@+id/viewloc_textview_comment"
            app:layout_constraintEnd_toStartOf="@+id/viewloc_button_commentadd"
            app:layout_constraintStart_toEndOf="@+id/viewloc_textview_comment"
            app:layout_constraintTop_toTopOf="@+id/viewloc_textview_comment" />

        <Button
            android:id="@+id/viewloc_button_commentadd"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Add"
            app:layout_constraintBottom_toBottomOf="@+id/viewloc_edittext_comment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/viewloc_edittext_comment" />

        <TextView
            android:id="@+id/viewloc_textview_labeltopcomments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="Top Comments"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewloc_textview_comment" />

        <TextView
            android:id="@+id/viewloc_textview_topcomment_username1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewloc_textview_labeltopcomments" />

        <TextView
            android:id="@+id/viewloc_textview_topcomment_comment1"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="comment1"
            app:layout_constraintStart_toEndOf="@+id/viewloc_button_topcomment_minus1"
            app:layout_constraintTop_toTopOf="@+id/viewloc_textview_topcomment_username1" />

        <TextView
            android:id="@+id/viewloc_textview_topcomment_rating1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="10"
            app:layout_constraintBottom_toBottomOf="@+id/viewloc_button_topcomment_plus1"
            app:layout_constraintEnd_toStartOf="@+id/viewloc_button_topcomment_plus1"
            app:layout_constraintTop_toTopOf="@+id/viewloc_button_topcomment_plus1" />

        <Button
            android:id="@+id/viewloc_button_topcomment_plus1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="4dp"
            android:text="+"
            app:layout_constraintEnd_toStartOf="@+id/viewloc_button_topcomment_minus1"
            app:layout_constraintTop_toBottomOf="@+id/viewloc_textview_topcomment_username1" />

        <Button
            android:id="@+id/viewloc_button_topcomment_minus1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="250dp"
            android:text="-"
            app:layout_constraintBottom_toBottomOf="@+id/viewloc_button_topcomment_plus1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/viewloc_button_topcomment_plus1" />

        <TextView
            android:id="@+id/viewloc_textview_topcomment_username2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="username2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewloc_button_topcomment_plus1" />

        <TextView
            android:id="@+id/viewloc_textview_topcomment_comment2"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="comment2"
            app:layout_constraintStart_toEndOf="@+id/viewloc_button_topcomment_minus2"
            app:layout_constraintTop_toTopOf="@+id/viewloc_textview_topcomment_username2" />

        <TextView
            android:id="@+id/viewloc_textview_topcomment_rating2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="100"
            app:layout_constraintBottom_toBottomOf="@+id/viewloc_button_topcomment_plus2"
            app:layout_constraintEnd_toStartOf="@+id/viewloc_button_topcomment_plus2"
            app:layout_constraintTop_toTopOf="@+id/viewloc_button_topcomment_plus2" />

        <Button
            android:id="@+id/viewloc_button_topcomment_plus2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="4dp"
            android:text="+"
            app:layout_constraintEnd_toStartOf="@+id/viewloc_button_topcomment_minus2"
            app:layout_constraintTop_toBottomOf="@+id/viewloc_textview_topcomment_username2" />

        <Button
            android:id="@+id/viewloc_button_topcomment_minus2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="250dp"
            android:text="-"
            app:layout_constraintBottom_toBottomOf="@+id/viewloc_button_topcomment_plus2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/viewloc_button_topcomment_plus2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>